{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "checkJs": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/api/getDynamicCover.js", "api/generate-cover/tag/[tagId].js"],
  "exclude": ["node_modules"]
}
